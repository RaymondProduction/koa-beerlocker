<!DOCTYPE html>
<html>
  <head>
    <title>OAuth2</title>
  </head>
  <body>

    <h1><%= title %></h1>

    <form action="/api/oauth2/authorize" method="post">
      <input name="transaction_id" type="hidden" value="<%= title %>">
      <div>
      <input type="submit" value="Allow" id="allow">
      <input type="submit" value="Deny" name="cancel" id="deny">
      </div>
    </form>

  </body>
</html>
